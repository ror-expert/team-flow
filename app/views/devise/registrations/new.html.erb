<section class="login_form">
  <div class="container">
    <div class="row">
      <div class="offset-md-4 col-md-4 col-xs-12">
        <div class="login_inner">
          <%= image_tag 'logo.png' %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div id='step_1'>
              <div class="form-group">
                <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
                <label><i class="fa fa-user" aria-hidden="true"></i></label>
              </div>
              <div class="form-group">
                <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
                <label><i class="fa fa-user" aria-hidden="true"></i></label>
              </div>
              <div class="form-group">
                <%= f.text_field :company_name, class: "form-control", placeholder: "Company Name" %>
                <label><i class="fa fa-building" aria-hidden="true"></i></label>
              </div>
              <a href="javascript:void(0);" class="btn btn_custom mb-4 mt-5 next_button">Next</a>
            </div>
            <div id='step_2' style='display:none;'>
              <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
                <label><i class="fa fa-envelope" aria-hidden="true"></i></label>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                <label><i class="fa fa-lock" aria-hidden="true"></i></label>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
                <label><i class="fa fa-lock" aria-hidden="true"></i></label>
              </div>
              <button type="submit" class="btn btn_custom mb-4 mt-5">Sign Up</a>
            </div>

            <div class="btn_bottom">
              <span class="back_btn">
                <%= link_to 'Back to Login', new_user_session_path %>
              </span>
              <span class="step_btn float-right">Step 1 of 2</span>
            </div>
          <% end %>
          <!-- </form> -->
        </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  $(document).ready(function(){
    $('.next_button').on('click', function(){
      $('#step_1').hide()
      $('#step_2').show()
      $('.step_btn.float-right').text('Step 2 of 2')
    })

    $(document).on("keydown", "form#new_user", function(event){ 
        return event.key != "Enter";
    });

  })
</script>